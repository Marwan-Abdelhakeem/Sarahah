<%- include('./shared/headers.ejs') %>

    <title>Register | Sarahah</title>

    <head>
        <meta name="description" content="Create your Sarahah account and start receiving anonymous feedback from friends and coworkers.">
        <meta name="robots" content="noindex, nofollow">
    </head>

    <div class="container my-5">
        <div class="register-card bg-white p-4 p-md-5">
            <div class="text-center mb-4">
                <i class="far fa-edit user-icon"></i>
                <h2 class="fw-bold mb-1">Create Your Account</h2>
                <p class="text-muted">Join Sarahah to send and receive anonymous messages</p>
            </div>

            <form method="POST" action="/auth/handleRegister" id="registerForm">
                <div class="mb-3">
                    <label for="name" class="form-label">Full Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" required>
                </div>
                
                <div class="mb-3">
                    <label for="email" class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                
                <div class="mb-3 password-input">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Create a password" required
                           oninput="checkPasswordStrength(this.value)">
                    <i class="fas fa-eye password-toggle" onclick="togglePassword('password')"></i>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="passwordStrength"></div>
                    </div>
                    <small class="text-muted">Use 8+ characters with a mix of letters, numbers & symbols</small>
                </div>
                
                <div class="mb-3 password-input">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="passwordConfirmation" 
                           placeholder="Re-enter your password" required
                           oninput="checkPasswordMatch()">
                    <i class="fas fa-eye password-toggle" onclick="togglePassword('confirmPassword')"></i>
                    <small id="passwordMatch" class="text-danger"></small>
                </div>
                
                <button type="submit" class="btn btn-register w-100 mb-3">
                    <i class="fas fa-user-plus me-2"></i> Create Account
                </button>
                
                    <div class="divider">
                        <span class=" divider-text">OR CONTINUE WITH</span>
                    </div>

                    <div class="d-flex gap-3 mb-4">
                        <a href="/auth/google" class="oauth-btn btn btn-light flex-grow-1 d-flex align-items-center justify-content-center">
                            <i class="fab fa-google me-2" style="color: var(--google-red);"></i> Google
                        </a>
                        <a href="/auth/facebook" class="oauth-btn btn btn-light flex-grow-1 d-flex align-items-center justify-content-center">
                            <i class="fab fa-facebook-f me-2" style="color: var(--facebook-blue);"></i> Facebook
                        </a>
                    </div>

                <div class="text-center">
                    <p class="mb-0">Already have an account? <a href="/auth/login" class="auth-link">Sign in</a></p>
                </div>
            </form>

        </div>
    </div>

<%- include('./shared/footer.ejs') %>
