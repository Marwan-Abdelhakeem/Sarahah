<%- include('./shared/headers.ejs') %>

<title>Reset Password | Sarahah</title>

    <head>
        <meta name="description" content="Reset your Sarahah password securely to regain access to your account.">
        <meta name="robots" content="noindex, nofollow">
    </head>

    <div class="container my-5">
        <div class="reset-card bg-white">
            <div class="text-center mb-4">
                <i class="fas fa-key user-icon"></i>
                <h2 class="fw-bold mb-2">Reset Your Password</h2>
                <p class="text-muted">Enter the OTP sent to your email and set a new password</p>
            </div>

            <form method="POST" action="/auth/resetPassword" id="resetForm">
                <div class="mb-3">
                    <label for="otp" class="form-label">Verification Code</label>
                    <input type="number" class="form-control otp-input" id="otp" name="otp" 
                           placeholder="Enter 6-digit OTP" required min="100000" max="999999">
                </div>
                
                <div class="mb-3 password-input">
                    <label for="password" class="form-label">New Password</label>
                    <input type="password" class="form-control" id="password" name="password" 
                           placeholder="Create a new password" required
                           oninput="checkPasswordStrength(this.value)">
                    <i class="fas fa-eye password-toggle" onclick="togglePassword('password')"></i>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="passwordStrength"></div>
                    </div>
                    <small class="text-muted">Use 8+ characters with a mix of letters, numbers & symbols</small>
                </div>
                
                <div class="mb-3 password-input">
                    <label for="confirmPassword" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="passwordConfirmation" 
                           placeholder="Re-enter your new password" required
                           oninput="checkPasswordMatch()">
                    <i class="fas fa-eye password-toggle" onclick="togglePassword('confirmPassword')"></i>
                    <small id="passwordMatch" class="text-danger"></small>
                </div>
                
                <button type="submit" class="btn btn-reset w-100 mb-3">
                    <i class="fas fa-redo me-2"></i> Reset Password
                </button>
                
                <div class="text-center">
                    <p class="mb-0">Remember your password? <a href="/auth/login" class="auth-link">Sign in</a></p>
                </div>
            </form>
        </div>
    </div>

    <%- include('./shared/footer.ejs') %>